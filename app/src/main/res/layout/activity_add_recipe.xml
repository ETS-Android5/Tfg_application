<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    tools:context=".AddRecipe">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Your New Recipe"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgRecipe"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:onClick="chooseImage"
            android:scaleType="fitXY" />

        <EditText
            android:id="@+id/name_recipe"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="top|start"
            android:hint="Title e.g. Baked chicken like my mother's "
            android:inputType="textMultiLine"
            android:lines="2"
            android:maxLines="3"
            android:scrollbars="vertical" />
    </LinearLayout>


    <EditText
        android:id="@+id/info_about"
        android:maxLines="50"
        android:gravity="top"
        android:hint="Don't Forget Add A description"
        android:padding="10dp"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Spinner
            android:id="@+id/ingredient"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_marginLeft="40dp"
            android:id="@+id/numIngredients"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kcal "
        android:inputType="numberDecimal"/>

    <android.support.design.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Save"
        />


</LinearLayout>